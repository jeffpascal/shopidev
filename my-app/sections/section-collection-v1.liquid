<div data-section-id="{{ section.id }}" data-section-type="section-collection-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-collection-v1">
    <div class="container container-v1">
      <div class="row ">
        <div class="col-md-4">
          <div class="box-info">
            <div class="box-img">
              <a href="{{section.settings.url_banner1}}">
                {% if section.settings.img_banner1 != blank %}
                <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="w-100 img-fluid">
                {% else %}
                <img src="//placehold.it/300x300" class="w-100 img-fluid" alt="">
                {% endif %}
              </a>
            </div>
            <div class="overlay-banner"></div>
            <div class="banner-info">
              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_banner1}}" class="button-shop text-center">{{section.settings.button_1}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="box-info">
            <div class="box-img">
              <a href="{{section.settings.url_banner2}}">
                {% if section.settings.img_banner2 != blank %}
                <img src="{{section.settings.img_banner2 | img_url:'master'}}" class="w-100 img-fluid">
                {% else %}
                <img src="//placehold.it/300x300" class="w-100 img-fluid" alt="">
                {% endif %}
              </a>
            </div>
            <div class="overlay-banner"></div>
            <div class="banner-info">
              {% if section.settings.button_2 != blank %}
              <a href="{{section.settings.url_banner2}}" class="button-shop text-center">{{section.settings.button_2}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="box-info">
            <div class="box-img">
              <a href="{{section.settings.url_banner3}}">
                {% if section.settings.img_banner3 != blank %}
                <img src="{{section.settings.img_banner3 | img_url:'master'}}" class="w-100 img-fluid">
                {% else %}
                <img src="//placehold.it/300x300" class="w-100 img-fluid" alt="">
                {% endif %}
              </a>
            </div>
            <div class="overlay-banner"></div>
            <div class="banner-info">
              {% if section.settings.button_3 != blank %}
              <a href="{{section.settings.url_banner3}}" class="button-shop text-center">{{section.settings.button_3}}</a>
              {% endif %}
            </div>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>
