<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  {% if section.settings.button_1 != blank  %}
    <div class="section-banner-v6" style="background-image: url({% if section.settings.backgroud_image != blank %}{{section.settings.backgroud_image|img_url:'master'}}{% else %}//placehold.it/1881x1000{% endif %})">

    <div class="banner-info text-center">
      {% if section.settings.title_banner != blank %}
      <h3 class="title title-heading">{{section.settings.title_banner}}</h3>
      {% endif %}
      {% if section.settings.sub_title != blank %}
      <div class="subtitle"><span>{{section.settings.sub_title}}</span></div>
      {% endif %}

      {% if section.settings.button_1 != blank %}
      <a href="{{section.settings.url_banner}}" class="button-shop">{{section.settings.button_1}}</a>
      {% endif %}

    </div>
  </div>
  {% else %}
  <a href="{{section.settings.url_banner}}">
  <div class="section-banner-v6" style="background-image: url({% if section.settings.backgroud_image != blank %}{{section.settings.backgroud_image|img_url:'master'}}{% else %}//placehold.it/1881x1000{% endif %})">

    <div class="banner-info text-center">
      {% if section.settings.title_banner != blank %}
      <h3 class="title">{{section.settings.title_banner}}</h3>
      {% endif %}
      {% if section.settings.sub_title != blank %}
      <div class="subtitle"><span>{{section.settings.sub_title}}</span></div>
      {% endif %}

    </div>
  </div>
  </a>
  

  {% endif %}
  
  
</div>
{% schema %}
{
  "name": "Banner v6",
  "settings": [
	{
      "type": "image_picker",
      "id": "backgroud_image",
      "label": "Backgroud Image",
      "info": "1881 x 1000px recommended"
    },
	{
      "type": "text",
      "id": "title_banner",
      "label": "Title banner",
      "default": "Primrose Park"
    },
	{
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title banner",
      "default": "Your favourite styles have just dropped in new prints<br> get them before they go!"
    },
	{
      "type": "text",
      "id": "button_1",
      "label": "button banner",
      "default": "SHOP NOW"
    },
	{
      "type": "url",
      "id": "url_banner",
      "label": "URL button",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v6",
      "category": "HOME 4"
    }
  ]
}
{% endschema %}

