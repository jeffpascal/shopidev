<div data-section-id="{{ section.id }}" data-section-type="section-product-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v1">
    <div class="container container-v1">
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner_1}}">
                {% if section.settings.img_banner1 != blank %}
                <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid w-100">
                {% else %}
                <img src="//placehold.it/960x572" class="img-fluid w-100" alt="">
                {% endif %}
              </a>
            </div>
            <div class="content-banner">
              {% if section.settings.title_1 != blank %}
              <h3 class="title mb-0">
                <a class="link__hover" title="{{section.settings.title_1}}" href="{{section.settings.url_banner_1}}">{{section.settings.title_1}}</a>
              </h3>
              {% endif %}
              {% if section.settings.sub_title1 != blank %}
              <span class="label_text"><span class="text">{{section.settings.sub_title1}}</span></span>
              {% endif %}
              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_button1}}" class="button-shop">{{section.settings.button_1}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-6 px-md-0">
          <div class="product_features slick_product_h1_banner">    
            {% assign products_limit = section.settings.products_limit %}
            {% assign col = section.settings.select_collection1 %}
            {% for product in collections[col].products limit: products_limit %}
            <div class="col-md-6 col-6 product_item">
              {% include 'product-item-v1' %}
            </div>
            {% else %}
            {% for i in (1..12) %}
            <div class="col-md-6 col-6 product_item">
              {% include 'empty-product-item' %}
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6 px-md-0 order-sm-6 order-2">
          <div class="product_features slick_product_h1_banner">    
            {% assign products_limit = section.settings.products_limit %}
            {% assign col = section.settings.select_collection2 %}
            {% for product in collections[col].products limit: products_limit %}
            <div class="col-md-6 col-6 product_item">
              {% include 'product-item-v1' %}
            </div>
            {% else %}
            {% for i in (1..12) %}
            <div class="col-md-6 col-6 product_item">
              {% include 'empty-product-item' %}
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        </div>
        <div class="col-lg-6 col-md-6 order-sm-6 order-1">
          <div class="box-banner">
            <div class="box-img">
              <a href="{{section.settings.url_banner_1}}">
                {% if section.settings.img_banner2 != blank %}
                <img src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid w-100">
                {% else %}
                <img src="//placehold.it/960x572" class="img-fluid w-100" alt="">
                {% endif %}
              </a>
            </div>
            <div class="content-banner">
              {% if section.settings.title_1 != blank %}
              <h3 class="title mb-0">
                <a class="link__hover" title="{{section.settings.title_2}}" href="{{section.settings.url_banner_1}}">{{section.settings.title_2}}</a>
              </h3>
              {% endif %}
              {% if section.settings.sub_title1 != blank %}
              <span class="label_text"><span class="text">{{section.settings.sub_title2}}</span></span>
              {% endif %}
              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_button1}}" class="button-shop">{{section.settings.button_1}}</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
