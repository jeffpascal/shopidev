{
  "name": "Service v2",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
    
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service item",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": " THE BIGGEST SALE EVER - UP TO 70% OFF"
        },
        {
          "type": "text",
          "id": "block_content",
          "label": "Content",
          "default": " New lines added"
        }
      ]
    }
  ],
  "presets": [
