<div data-section-id="{{ section.id }}" data-section-type="section-banner-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v5" style="background-color:{{section.settings.bgsection_color}};">
    <div class="container container-v2">
      <div class="row justify-content-between">        
        <div class="col-lg-6 col-md-6 text-left">
          <div class="box-info left">
            <div class="box-img">
              {% if section.settings.img_banner1 != blank %}
              <a href="{{section.settings.url_banner1}}"><img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner1}}"><img src="//placehold.it/598x552" class="img-fluid" alt=""></a>
              {% endif %}
            </div>
            
            <div class="content-banner">
              {% if section.settings.title_1 != blank %}
              <h3 class="title mb-0">{{section.settings.title_1}}</h3>
              {% endif %}
              {% if section.settings.sub-title1 != blank %}
              <span class="sub-title">
                {{section.settings.sub-title1}}
              </span>
              {% endif %}
              <div class="info-bottom"> 
                {% if section.settings.button_1 != blank %}
                <a href="{{section.settings.url_button1}}" class="button-shop">{{section.settings.button_1}}</a>
                {% endif %}
              </div>
            </div>           
          </div>
        </div>
        
        <div class="col-lg-6 col-md-6 text-left">
          <div class="box-info right">
            <div class="box-img">
              {% if section.settings.img_banner2 != blank %}
              <a href="{{section.settings.url_banner2}}"><img src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid"></a>
              {% else %}
                <a href="{{section.settings.url_banner2}}"><img src="//placehold.it/598x552" class="img-fluid" alt=""></a>
              {% endif %}
            </div>
            
            <div class="content-banner">
              {% if section.settings.title_2 != blank %}
              <h3 class="title mb-0">{{section.settings.title_2}}</h3>
              {% endif %}
              {% if section.settings.sub-title2 != blank %}
              <span class="sub-title">
                {{section.settings.sub-title2}}
              </span>
              {% endif %}
              <div class="info-bottom"> 
                {% if section.settings.button_2 != blank %}
                <a href="{{section.settings.url_button2}}" class="button-shop ">{{section.settings.button_2}}</a>
                {% endif %}
              </div>
            </div>           
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>
