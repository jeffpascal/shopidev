<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-slideshow-v3">      
    {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
    {% if block.type == "slideshow" %}
    <div class="itemv-slide-h3" style="background-image: url({% if block.settings.backgroud_slide != blank %}{{block.settings.backgroud_slide |img_url:'master'}}{% else %}//placehold.it/1881x1080{% endif %})">
      <div class="container container-v2">
        <div class="content">
          {% if block.settings.block_subtitle_top != blank %}
          <p class="mb-0 sub-title-top" style="color:{{block.settings.color_subtitle_top}};">{{block.settings.block_subtitle_top}}</p>
          {% endif %}
          {% if block.settings.block_title != blank %}
          <h2 class="mb-0 title-slideshow" style="color:{{block.settings.color_title}};">{{block.settings.block_title}}</h2>
          {% endif %}
          {% if block.settings.block_subtitle != blank %}
          <p class="sub-title-content" style="color:{{block.settings.color_subtitle}};">{{block.settings.block_subtitle}}</p>
          {% endif %}
          <div class="box-shop">
            {% if block.settings.block_buton != blank %}
            <a href="{{block.settings.block_url}}" class="button-shop-{{section.id}}-{{block.id}}" style="color:{{block.settings.color_block_button}}; background-color:{{block.settings.color_bg_block_button}};">{{block.settings.block_buton}}</a> 
            {% endif%}
            {% if block.settings.block_button2 != blank %}
            <a href="{{block.settings.block_url2}}" class="button-shop2-{{section.id}}-{{block.id}}" style="color:{{block.settings.color_block_button2}}; background-color: {{block.settings.color_bg_button_2}}">{{block.settings.block_button2}}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    {% endif %}
    {% endfor %}
    {% endif %}
  </div>
</div>
<style>
  {% for block in section.blocks %}
  {% if block.type == 'slideshow' %}
  .section-slideshow-v3 .itemv-slide-h3 .content .button-shop-{{section.id}}-{{block.id}} {
    
  }
  .section-slideshow-v3 .itemv-slide-h3 .content .button-shop-{{section.id}}-{{block.id}}:hover{
    background-color: {{block.settings.color_bg_block_button_hover}} !important;
  }
  .section-slideshow-v3 .itemv-slide-h3 .content .button-shop2-{{section.id}}-{{block.id}} {

  }
  .section-slideshow-v3 .itemv-slide-h3 .content .button-shop2-{{section.id}}-{{block.id}}:hover {
    background-color: {{block.settings.color_bg_block_button2_hover}} !important;
  }
  {% endif %}
  {% endfor %}
</style>
