<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1 mt-all">
    <div class="container container-v1">
      <div class="img-banner images">
        {% if section.settings.img_banner != blank %}
        <a href="{{section.settings.url_banner}}"><img src="{{section.settings.img_banner | img_url:'master'}}" class="img-fluid"></a>
        {% else %}
        <a href="{{section.settings.url_banner}}"><img src="//placehold.it/1920x953" class="img-fluid" alt=""></a>
        {% endif %}
        <div class="banner-info">
          <div class="top_title">
            <h3 class="title">
              <a href="{{section.settings.url_banner}}">{{section.settings.title}}</a>
            </h3>
          </div>
          <div class="subtitle">{{section.settings.sub_title}}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Banner v1",
  "settings": [
	{
      "type": "image_picker",
      "id": "img_banner",
      "label": "Image"
    },
	{
      "type": "url",
      "id": "url_banner",
      "label": "URL button",
      "default": "/collections/all"
    },
	{
      "type": "text",
      "id": "title",
      "label": "Title banner",
      "default": "Hinter.Conders"
    },
	
	{
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title banner",
      "default": "MANY OF MANY"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v1",
      "category": "HOME 1"
    }
  ]
}
{% endschema %}

