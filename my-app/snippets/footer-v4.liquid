<footer class="footer_v4">
  <div class="top-footer">
    <div class="container container-v2">    
      <div class="row">
        <div class="col-lg-3 col-md-4">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv4_1}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv4_1].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3 col-md-4">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv4_2}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv4_2].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3 col-md-4">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv4_3}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv4_3].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="info_footer end">
            <div class="logo-top">
              {% if settings.logo_svg4 !=blank %}
              <div class="logosvg" style="max-width:{{settings.fv4_main_logo_maxwidth}}px;">
                <a class="d-block" href="{{shop.url}}">{{settings.logo_svg4}}</a>
              </div>          
              {% else %}          	
              <a href="{{shop.url}}" class="logo">
                {% if settings.fv4_main_logo != blank %}
                <img src="{{settings.fv4_main_logo | img_url:'master'}}"  width="{{settings.fv4_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% else %}
                <img src="//placehold.it/160x46" width="{{settings.fv4_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% endif %}
              </a>
              {% endif %}
            </div>
            {% if settings.content_colum_fv4_4 != blank  %}
            	<p class="mb-0 content_footer">{{settings.content_colum_fv4_4}}</p>
            {% endif %}
            <div class="title_footer end">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv4_4}}</h4>         
            </div>
            <div class="list-icon">
              <ul class="list-inline list-unstyled mb-0">
                {% if settings.icon_sc_fv4_1 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv4_1}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv4_1}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv4_2 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv4_2}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv4_2}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv4_3 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv4_3}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv4_3}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv4_4 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv4_4}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv4_4}}"></i></a>
                </li>
                {% endif %}
              </ul>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if settings.enable_fv4_bottom %}
  <div class="copyright">
    <div class="container container-v2">
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6 text-md-left">
          {% if settings.fv4_bottom_payment_img != blank %}
          <img src="{{settings.fv4_bottom_payment_img | img_url:'master'}}"  alt="">
          {% else %}
          <img src="//placehold.it/247x23"  alt="">
          {% endif %}
        </div>
        <div class="col-lg-6 col-md-6 text-md-right">
          {% if settings.fv4_bottom_copyright != blank %}
          <p class="text-copyright mb-0">{{settings.fv4_bottom_copyright}}</p>
          {% else %}
          <p class="text-copyright mb-0">Website by <a href="#">Famithemes</a>. Copyright Evelandshop</p>
          {% endif %}
        </div>        
      </div>
    </div>
  </div>
  {% endif %}
</footer>
