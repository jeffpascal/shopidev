<footer class="footer_v2">
    <div class="container container-v2">    
      <div class="row">
        <div class="col-lg-3 col-md-3">
          <div class="info_us">
            <div class="logo-top">
              {% if settings.logo_svg2 !=blank %}
              <div class="logosvg" style="max-width:{{settings.fv2_main_logo_maxwidth}}px;">
                <a class="d-block" href="{{shop.url}}">{{settings.logo_svg2}}</a>
              </div>          
              {% else %}          	
              <a href="{{shop.url}}" class="logo">
                {% if settings.fv2_main_logo != blank %}
                <img src="{{settings.fv2_main_logo | img_url:'master'}}"  width="{{settings.fv2_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% else %}
                <img src="//placehold.it/160x46" width="{{settings.fv2_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% endif %}
              </a>
              {% endif %}
            </div>
            {% if settings.content_col1_fv2 != blank %}
            <p class="mb-0 content-logo">{{settings.content_col1_fv2}}</p>
            {% endif %}
            <div class="title_footer title-us">          
              <h4 class="mb-0 title_border">{{settings.title_social}}</h4>         
            </div>
            <div class="list-icon">
              <ul class="list-inline list-unstyled mb-0">
                {% if settings.icon_sc_fv2_1 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv2_1}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv2_1}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv2_2 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv2_2}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv2_2}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv2_3 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv2_3}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv2_3}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv2_4 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv2_4}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv2_4}}"></i></a>
                </li>
                {% endif %} 
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-2 col-md-3">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv2_1}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv2_1].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-2 col-md-3">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv2_2}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv2_2].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-2 col-md-3">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv2_3}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv2_3].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-lg-3">
          <div class="info_footer end">
            <div class="title_footer ">          
              <h4 class="mb-0 title_border end">{{settings.titlecolum_fv2_4}}</h4>         
            </div>
            {% if settings.content_colum_fv2_4 != blank %}
            <p class="mb-0 content_newleter">{{settings.content_colum_fv2_4}}</p>
            {% endif %}

            {% if settings.newsletter_form_action != blank %}
            {% assign form_action = settings.newsletter_form_action %}
            {% else %}
            {% assign form_action = '#' %}
            {% endif %}          
            <form class="needs-validation form-inline" action="{{form_action}}" method="post">
              <div class="form-group">                           
                <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}">                 
              </div>
              <button class="btn" type="submit">{{ 'general.newsletter_form.submit_footer' | t }}</button>
            </form>      
          </div>
        </div>
      </div>
    </div>
</footer>

<style>
  @media(max-width: 576px){
    .info_us{
    	margin-bottom: 15px;
    }
  }
  
</style>